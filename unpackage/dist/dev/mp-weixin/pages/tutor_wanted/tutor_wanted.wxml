<view><cu-custom vue-id="1" bgColor="bg-gradual-pink" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">请家教</view></cu-custom><view class="bg-white padding"><view class="cu-steps"><block wx:for="{{numList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['cu-item',index>num?'':'text-blue']}}"><text class="num" data-index="{{index+1}}"></text>{{''+item.name+''}}</view></block></view></view><block wx:if="{{num==0}}"><form id="basic"><view class="cu-form-group margin-top"><view class="title">标题</view><input placeholder="请简要描述家教要求" name="basicTitle" maxlength="30" data-event-opts="{{[['input',[['setBasicTitle',['$event']]]]]}}" value="{{basicTitle}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">手机</view><input placeholder="请输入您的手机号码" name="basicPhone" type="number" maxlength="11" data-event-opts="{{[['input',[['setBasicPhone',['$event']]]]]}}" value="{{basicPhone}}" bindinput="__e"/><view class="cu-capsule radius"><button class="getPhoneNumber" open-type="getPhoneNumber" data-event-opts="{{[['getphonenumber',[['getPhoneNumber',['$event']]]]]}}" bindgetphonenumber="__e"><view class="cu-tag bg-blue ">+86</view><view class="cu-tag line-blue">中国大陆</view></button></view></view><view class="cu-form-group"><view class="title">城市</view><picker mode="region" value="{{basicCity}}" name="basicCity" maxlength="20" data-event-opts="{{[['change',[['basicCityChange',['$event']]]]]}}" bindchange="__e"><view class="picker" style="text-align:left;">{{''+basicCity[0]+"，"+basicCity[1]+"，"+basicCity[2]+''}}</view></picker></view><view class="cu-bar bg-white"><view class="title" style="font-size:30rpx;padding:1rpx 30rpx;color:#333;">授课时间</view><block wx:for="{{checkbox}}" wx:for-item="item" wx:for-index="index" wx:key="index"><text class="padding-xs">{{''+(item.checked?item.name:'')}}</text></block><view class="action"><button class="cu-btn bg-green shadow" data-target="ChooseModal" data-event-opts="{{[['tap',[['showModal',['$event']]]]]}}" bindtap="__e">选择</button></view></view><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="{{['cu-modal bottom-modal',modalName=='ChooseModal'?'show':'']}}" bindtap="__e"><view data-event-opts="{{[['tap',[['',['$event']]]]]}}" class="cu-dialog" catchtap="__e"><view class="cu-bar bg-white"><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="action text-blue" bindtap="__e">取消</view><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="action text-green" bindtap="__e">确定</view></view><view class="grid col-3 padding-sm"><block wx:for="{{checkbox}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="padding-xs"><button class="{{['cu-btn orange lg block',item.checked?'bg-orange':'line-orange']}}" data-value="{{item.value}}" data-event-opts="{{[['tap',[['ChooseCheckbox',['$event']]]]]}}" bindtap="__e">{{''+item.name+''}}<block wx:if="{{item.hot}}"><view class="{{['cu-tag sm round',item.checked?'bg-white text-orange':'bg-orange']}}">热门</view></block></button></view></block></view></view></view></form></block><block wx:if="{{num==1}}"><form id="student"><view class="cu-form-group"><view class="title">学生性别</view><picker range="{{gender}}" value="{{studentGender}}" name="studentGender" maxlength="1" data-event-opts="{{[['change',[['studentGenderChange',['$event']]]]]}}" bindchange="__e"><view class="picker" style="text-align:left;">{{''+(studentGenderIndex>-1?gender[studentGenderIndex]:'请选择学生性别')+''}}</view></picker></view><view class="cu-form-group"><view class="title">补习科目</view><input placeholder="请输入所需家教的科目" name="title" maxlength="10" data-event-opts="{{[['input',[['setSubject',['$event']]]]]}}" value="{{subject}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">学生地址</view><input placeholder="请输入学生的地址" type="text" maxlength="30" focus="true" data-event-opts="{{[['input',[['setDetailAddress',['$event']]]]]}}" value="{{detailAddress}}" bindinput="__e"/><text data-event-opts="{{[['tap',[['getLocation',['$event']]]]]}}" class="cuIcon-locationfill text-orange" bindtap="__e"></text></view><view class="cu-form-group align-start"><view class="title">学生情况</view><textarea maxlength="140" placeholder="请简要描述孩子的情况" data-event-opts="{{[['input',[['setStudentIntro',['$event']]]]]}}" value="{{studentIntro}}" bindinput="__e"></textarea></view></form></block><block wx:if="{{num==2}}"><form id="tutor"><view class="cu-form-group"><view class="title">老师性别</view><picker range="{{gender}}" value="{{tutorGender}}" name="tutorGender" maxlength="1" data-event-opts="{{[['change',[['tutorGenderChange',['$event']]]]]}}" bindchange="__e"><view class="picker" style="text-align:left;">{{''+(tutorGenderIndex>-1?gender[tutorGenderIndex]:'请选择性别')+''}}</view></picker></view><view class="cu-form-group"><view class="title">预算时薪</view><input placeholder="请输入您的预算时薪" name="salary" type="number" maxlength="20" value="{{salary}}"/><view class="cu-tag bg-blue">元</view></view><view class="cu-form-group"><view class="title">每次时长</view><input placeholder="请输入您每次需要的家教时长" name="duration" type="number" maxlength="2" value="{{duration}}"/><view class="cu-tag bg-blue">时</view></view><view class="cu-form-group align-start"><view class="title">老师要求</view><textarea maxlength="140" placeholder="请简述对老师要求" data-event-opts="{{[['input',[['setTutorRequest',['$event']]]]]}}" value="{{tutorRequest}}" bindinput="__e"></textarea></view></form></block><view class="cu-bar bg-white solid-bottom margin-top" style="position:relative;"><block wx:if="{{num!=0}}"><view class="action" style="text-align:center;"><button data-event-opts="{{[['tap',[['PreviousSteps',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">上一步</button></view></block><block wx:if="{{num!=2}}"><view class="action" style="position:absolute;right:0px;"><button data-event-opts="{{[['tap',[['NextSteps',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">下一步</button></view></block><block wx:if="{{num==2}}"><view class="action"><button data-event-opts="{{[['tap',[['tutorWantedSubmit',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">提 交</button></view></block></view></view>