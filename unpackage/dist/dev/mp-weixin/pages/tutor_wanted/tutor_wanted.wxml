<view><cu-custom vue-id="1" bgColor="bg-gradual-pink" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">请家教</view></cu-custom><view class="bg-white padding"><view class="cu-steps"><block wx:for="{{numList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['cu-item',index>num?'':'text-blue']}}"><text class="num" data-index="{{index+1}}"></text>{{''+item.name+''}}</view></block></view></view><block wx:if="{{num==0}}"><form id="basic"><view class="cu-form-group margin-top"><view class="title">标题</view><input placeholder="请简要描述家教要求" name="basicTitle" maxlength="30" value="{{basicTitle}}"/></view><view class="cu-form-group"><view class="title">手机</view><input placeholder="请输入您的手机号码" name="basicPhone" maxlength="11" value="{{basicPhone}}"/><view class="cu-capsule radius"><button class="getPhoneNumber" open-type="getPhoneNumber" data-event-opts="{{[['getphonenumber',[['getPhoneNumber',['$event']]]]]}}" bindgetphonenumber="__e"><view class="cu-tag bg-blue ">+86</view><view class="cu-tag line-blue">中国大陆</view></button></view></view><view class="cu-form-group"><view class="title">城市</view><picker mode="region" value="{{basicCity}}" name="basicCity" maxlength="20" data-event-opts="{{[['change',[['basicCityChange',['$event']]]]]}}" bindchange="__e"><view class="picker" style="text-align:left;">{{''+basicCity[0]+"，"+basicCity[1]+"，"+basicCity[2]+''}}</view></picker></view><view class="cu-bar bg-white"><view class="action"><text class="cuIcon-title text-orange "></text>授课时间</view><view class="action"><button class="cu-btn bg-green shadow" data-target="ChooseModal" data-event-opts="{{[['tap',[['showModal',['$event']]]]]}}" bindtap="__e">Choose</button></view></view><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="{{['cu-modal bottom-modal',modalName=='ChooseModal'?'show':'']}}" bindtap="__e"><view data-event-opts="{{[['tap',[['',['$event']]]]]}}" class="cu-dialog" catchtap="__e"><view class="cu-bar bg-white"><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="action text-blue" bindtap="__e">取消</view><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="action text-green" bindtap="__e">确定</view></view><view class="grid col-3 padding-sm"><block wx:for="{{checkbox}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="padding-xs"><button class="{{['cu-btn orange lg block',item.checked?'bg-orange':'line-orange']}}" data-value="{{item.value}}" data-event-opts="{{[['tap',[['ChooseCheckbox',['$event']]]]]}}" bindtap="__e">{{''+item.name+''}}<block wx:if="{{item.hot}}"><view class="{{['cu-tag sm round',item.checked?'bg-white text-orange':'bg-orange']}}">热门</view></block></button></view></block></view></view></view></form></block><block wx:if="{{num==1}}"><form id="student"><view class="cu-form-group"><view class="title">性别</view><picker range="{{gender}}" value="{{studentGender}}" name="studentGender" maxlength="1" data-event-opts="{{[['change',[['studentGenderChange',['$event']]]]]}}" bindchange="__e"><view class="picker" style="text-align:left;">{{''+(studentGenderIndex>-1?gender[studentGenderIndex]:'请选择学生性别')+''}}</view></picker></view><view class="cu-form-group"><view class="title">科目</view><input placeholder="请简要描述" name="title" maxlength="10" value="{{subject}}"/></view><view class="cu-form-group"><view class="title">地址</view><input placeholder="请输入大致地址,精确到小区名即可" type="text" maxlength="30" focus="true" data-event-opts="{{[['input',[['__set_model',['','storeAddress','$event',[]]],['setStoreAddress',['$event']]]]]}}" value="{{storeAddress}}" bindinput="__e"/><text data-event-opts="{{[['tap',[['getLocation',['$event']]]]]}}" class="cuIcon-locationfill text-orange" bindtap="__e"></text></view><view class="cu-form-group align-start"><view class="title">学生情况描述</view><textarea maxlength="140" disabled="{{modalName!=null}}" placeholder="请输入简要描述孩子的情况" data-event-opts="{{[['input',[['setStudentIntro',['$event']]]]]}}" bindinput="__e"></textarea></view></form></block><block wx:if="{{num==2}}"><form id="tutor"><view class="cu-form-group"><view class="title">性别</view><picker range="{{gender}}" value="{{tutorGender}}" name="tutorGender" maxlength="1" data-event-opts="{{[['change',[['tutorGenderChange',['$event']]]]]}}" bindchange="__e"><view class="picker" style="text-align:left;">{{''+(tutorGenderIndex>-1?gender[tutorGenderIndex]:'请选择性别')+''}}</view></picker></view><view class="cu-form-group"><view class="title">时薪</view><input placeholder="请输入您的预算时薪" name="salary" type="number" maxlength="20" value="{{tutor.salary}}"/></view><view class="cu-form-group"><view class="title">时长</view><input placeholder="请输入您需要的家教时长" name="duration" type="number" maxlength="3" value="{{tutor.duration}}"/></view></form></block><view class="cu-bar bg-white solid-bottom margin-top" style="position:relative;"><block wx:if="{{num!=0}}"><view class="action" style="text-align:center;"><button data-event-opts="{{[['tap',[['PreviousSteps',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">上一步</button></view></block><block wx:if="{{num!=2}}"><view class="action" style="position:absolute;right:0px;"><button data-event-opts="{{[['tap',[['NextSteps',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">下一步</button></view></block><block wx:if="{{num==2}}"><view class="action"><button data-event-opts="{{[['tap',[['tutorSubmit',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">提 交</button></view></block></view></view>