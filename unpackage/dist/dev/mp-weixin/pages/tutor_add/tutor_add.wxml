<view><cu-custom vue-id="1" bgColor="bg-gradual-pink" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">完善家教信息</view></cu-custom><view class="cu-bar bg-white solid-bottom margin-top"><view class="action"><block wx:if="{{num!=0}}"><button data-event-opts="{{[['tap',[['PreviousSteps',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">上一步</button></block></view><view class="action"><text class="cuIcon-title text-orange"></text>完善家教信息</view><block wx:if="{{num!=3}}"><view class="action"><button data-event-opts="{{[['tap',[['NextSteps',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">下一步</button></view></block><block wx:if="{{num==3}}"><view class="action"><block wx:if="{{num==3}}"><button class="cu-btn bg-green shadow">提 交</button></block></view></block></view><view class="bg-white padding"><view class="cu-steps"><block wx:for="{{numList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['cu-item',index>num?'':'text-blue']}}"><text class="num" data-index="{{index+1}}"></text>{{''+item.name+''}}</view></block></view></view><block wx:if="{{num==0}}"><form id="tutor"><view class="cu-form-group margin-top"><view class="title">姓名</view><input placeholder="请输入您的姓名" name="name" maxlength="10" value="{{tutor.name}}"/></view><view class="cu-form-group"><view class="title">性别</view><input placeholder="请输入您的性别" name="gender" maxlength="6" value="{{tutor.gender}}"/></view><view class="cu-form-group"><view class="title">城市</view><picker mode="region" value="{{region}}" name="region" maxlength="20" data-event-opts="{{[['change',[['RegionChange',['$event']]]]]}}" bindchange="__e"><view class="picker" style="text-align:left;">{{''+region[0]+"，"+region[1]+"，"+region[2]+''}}</view></picker></view><view class="cu-form-group"><view class="title">学历</view><picker range="{{degree}}" value="{{tutor.degree}}" name="degree" maxlength="2" data-event-opts="{{[['change',[['degreeChange',['$event']]]]]}}" bindchange="__e"><view class="picker" style="text-align:left;">{{''+(degreeIndex>-1?degree[degreeIndex]:'请选择学历')+''}}</view></picker></view><view class="cu-form-group"><view class="title">学校</view><input placeholder="请输入您毕业或在读的学校" name="college" maxlength="20" value="{{tutor.college}}"/></view></form></block><block wx:if="{{num==1}}"><form><view class="cu-form-group margin-top"><view class="title">姓名</view><input placeholder="两字短标题" name="input"/></view><view class="cu-form-group"><view class="title">性别</view><input placeholder="三字标题" name="input" disabled="true" value="{{tutor.gender}}"/></view><view class="cu-form-group"><view class="title">头像</view><input placeholder="三字标题" name="input"/></view><view class="cu-form-group"><view class="title">生日</view><input placeholder="三字标题" name="input"/></view></form></block><view class="padding flex flex-direction"><button class="cu-btn bg-mauve margin-tb-sm lg" form-type="submit" data-event-opts="{{[['tap',[['tutorSubmit',['$event']]]]]}}" bindtap="__e">提交</button></view></view>